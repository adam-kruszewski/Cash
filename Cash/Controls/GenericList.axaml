<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cash.Controls.GenericList"
             xmlns:listControls="clr-namespace:Cash.Controls.GenericListControl"
             xmlns:myControls="clr-namespace:Cash.Controls">
  <UserControl.Styles>
    <Style Selector="TextBlock.GridHeader">
      <Setter Property="Foreground" Value="Red" />
    </Style>
  </UserControl.Styles>

  <myControls:OneControlGrowingDockPanel GrowingControlName="ScrollViewer" VerticalAlignment="Stretch">
    <!--<TextBlock Text="Generic list"/>
    <TextBlock Text="{Binding Header}"/>-->

    <Grid Name="HeaderGrid">
      <TextBlock Text="abc" Grid.Row="0" Grid.Column="0" />
    </Grid>

    <ScrollViewer Name="ScrollViewer" VerticalScrollBarVisibility="Visible" VerticalContentAlignment="Top">
      <ListBox Items="{Binding Rows}" Name="ListContent">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <listControls:ListRow DataContext="{Binding .}"/>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </ScrollViewer>

  </myControls:OneControlGrowingDockPanel>

</UserControl>
