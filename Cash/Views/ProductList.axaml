<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Cash.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cash.Views.ProductList"
             xmlns:ext="clr-namespace:Cash.Converters;assembly=Cash">
  <UserControl.Resources>
    <ext:ImageConverter x:Key="imageConverter"/>
  </UserControl.Resources>

  <ListBox Items="{Binding ItemsToDisplay}" ClipToBounds="True">
    <ListBox.ItemTemplate>
      <DataTemplate>
        <Grid RowDefinitions="50" ColumnDefinitions="250, 50, 50, 50, 50, 50">

          <TextBlock Text="{Binding Name}" Grid.Row="0" Grid.Column="0"/>

          <Image Source="{Binding Image, Converter={StaticResource imageConverter}}" Height="50" Grid.Row="0" Grid.Column="1"/>
          
          <TextBlock Text="{Binding BarCode}" Grid.Row="0" Grid.Column="2" />

          <TextBlock Text="{Binding Price}" Grid.Row="0" Grid.Column="3" />

          <TextBlock Text="{Binding Quantity}" Grid.Row="0" Grid.Column="4" />

          <TextBlock Text="{Binding Total}" Grid.Row="0" Grid.Column="5" />

        </Grid>
      </DataTemplate>
    </ListBox.ItemTemplate>
  </ListBox>
</UserControl>
