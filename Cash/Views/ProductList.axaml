<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Cash.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cash.Views.ProductList">
  <ListBox Items="{Binding ItemsToDisplay}">
    <ListBox.ItemTemplate>
      <DataTemplate>
        <Grid RowDefinitions="50" ColumnDefinitions="300, 50, 50, 50">

          <TextBlock Text="{Binding Name}" Grid.Row="0" Grid.Column="0"/>

          <TextBlock Text="{Binding BarCode}" Grid.Row="0" Grid.Column="1" />

          <TextBlock Text="{Binding Price}" Grid.Row="0" Grid.Column="2" />
          
          <TextBlock Text="{Binding Total}" Grid.Row="0" Grid.Column="3" />
          
        </Grid>
      </DataTemplate>
    </ListBox.ItemTemplate>
  </ListBox>
</UserControl>
